{
  "builders": [
    {
      "name": "{{user `name`}}",
      "vm_name": "test-{{user `name`}}-template",
      "output_directory": "machines/test-{{user `name`}}-template",
      "headless": false,
      "boot_wait": "2s",
      "disk_size": 81920,
      "guest_os_type": "darwin12-64",
      "iso_checksum_type": "sha1",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "shutdown_command": "echo '{{user `username`}}'|sudo -S shutdown -h now",
      "skip_compaction": true,
      "ssh_port": 22,
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "darwin",
      "type": "vmware-iso",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "4096",
        "numvcpus": "2",
        "firmware": "efi",
        "keyboardAndMouseProfile": "macProfile",
        "smc.present": "TRUE",
        "hpet0.present": "TRUE",
        "ich7m.present": "TRUE",
        "ehci.present": "TRUE",
        "usb.present": "TRUE",
        "vhv.enable": "TRUE"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "sleep {{user `provisioning_delay`}}"
    },
    {
      "destination": "/private/tmp/set_kcpassword.py",
      "source": "scripts/support/set_kcpassword.py",
      "type": "file"
    },
    {
      "execute_command": "chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}",
      "scripts": [
        "scripts/mac/user.sh",
        "scripts/mac/vmware.sh",
        "scripts/mac/add-network-interface-detection.sh",
        "scripts/mac/autologin.sh",
        "scripts/mac/system-update.sh",
	"scripts/mac/xcode-cli-tools.sh",
	"scripts/mac/disable-spotlight.sh"
      ],
      "environment_vars": [
        "AUTOLOGIN={{user `autologin`}}",
        "PASSWORD={{user `password`}}",
        "UPDATE_SYSTEM={{user `update_system`}}",
        "USERNAME={{user `username`}}"
      ],
      "type": "shell"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} {{ .Path }}",
      "scripts": [
        "scripts/mac/screensaver.sh"
      ]
    },
    {
      "type": "shell",
      "inline": "sudo reboot"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}",
      "scripts": [
        "scripts/mac/shrink.sh"
      ],
      "pause_before": "60s"
    }
  ],
  "variables": {
    "autologin": "true",
    "password": "Pass30rd!",
    "provisioning_delay": "0",
    "update_system": "false",
    "username": "docker"
  }
}
