opam-version: "1.2"
maintainer:   "dave@recoil.org"
authors:      ["David Scott"]
license:      "Apache-2.0"
homepage:     "https://github.com/docker/pinata"
bug-reports:  "https://github.com/docker/pinata"
dev-repo:     "https://github.com/docker/pinata.git"

build: [
  ["sh" "-c" "cd src/ofs && oasis setup"]
  ["sh" "-c" "cd src/ofs && ./configure --prefix %{prefix}%"]
  ["sh" "-c" "cd src/ofs && make"]
]
build-test: [
  ["sh" "-c" "cd src/ofs && ./configure --enable-tests"]
  ["sh" "-c" "cd src/ofs && make test"]
]
install: ["sh" "-c" "cd src/ofs && make install"]
remove: ["ocamlfind" "remove" "ofs"]
depends: [
  "ocamlfind" {build}
  "oasis" {build}
  "cmdliner"
  "protocol-9p" {= "0.5.2"}
  "logs"
  "cstruct" {>="1.6.0"}
]
available: [ocaml-version >= "4.02.0"]
